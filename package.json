{
  "name": "terra-plugins-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter '@terra/*' run build",
    "dev": "pnpm --filter @terra/cli run dev",
    "typecheck": "pnpm -r --filter '@terra/*' run typecheck",
    "link:global": "pnpm --filter @terra/cli link --global",
    "unlink:global": "pnpm --filter @terra/cli unlink --global"
  }
}